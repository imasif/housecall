{
  "name": "user",
  "plural": "users",
  "base": "User",
  "idInjection": false,
  "options": {
    "validateUpsert": true,
    "mysql": { "schema": "worklocker", "table": "User" }
  },
  "hidden":["username","realm"],
  
  "properties": {
    "id": {
      "type": "String",
      "id": true,
      "required": true,
      "defaultFn": "uuid"
    },
    "role": {
      "type": "String",
      "permissions":[{ 
        "type":"EDIT",
        "permission":"DENY",
        "principalId": "$everyone"
        },{ 
        "type":"EDIT",
        "permission":"ALLOW",
        "principalId": "admin"
        }
      ]
    },
    "email": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "string",
      "required": true
    },
    "first_name": {
      "type": "string",
      "required": true
    },
    "last_name": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "schedules": {
      "type": "hasMany",
      "model": "Schedule",
      "foreignKey": "userId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
